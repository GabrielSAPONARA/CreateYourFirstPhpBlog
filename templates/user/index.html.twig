{% extends "base.html.twig" %}

{% block title %}
    Social Networks
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block navbar %}
        {{ parent() }}
    {% endblock %}

    {% block main %}
        <h1>Users</h1>
        <a href="{{ path("users__addition") }}">Add User</a>
        {% for user in users %}
            <div>
                <div>Last Name</div>
                <div>{{ user.lastName }}</div>
            </div>
            <div>
                <div>First Name</div>
                <div>{{ user.firstName }}</div>
            </div>
            <div>
                <div>username</div>
                <div>{{ user.username }}</div>
            </div>
            <div>
                <div>Email Adress</div>
                <div>{{ user.emailAddress }}</div>
            </div>
            <div>
                <div>Role</div>
                <div>{{ user.role.name }}</div>
            </div>
            <div>
                <a href="{{ path( 'users_modify', {'id' :user.id}) }}">Modify</a>
            </div>
            <div>
                <a href="{{ path( 'users_delete', {'id' :user.id}) }}">Delete</a>
            </div>
        {% endfor %}
    {% endblock %}

{% endblock %}
