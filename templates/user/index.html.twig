{% extends "base.html.twig" %}

{% block title %}
    Users
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block pageTitle %}
    Users
{% endblock %}
{% block main %}
    <a class="btn btn-primary" href="{{ path("users__addition") }}">Add User</a>
    <section class="py-5">
        <div class="container px-5">
            <div class="row gx-5">
                {% for user in users %}
                    <div class="col-lg-4 mb-5">
                        <div class="card h-100 shadow border-0">
                            <div class="card-body p-4">
                                <div class="fw-bold">Last Name</div>
                                <p class="card-text mb-0">{{ user.lastName }}</p>
                                <div class="mt-3 fw-bold">First Name</div>
                                <p class="card-text mb-0">{{ user.firstName }}</p>
                                <div class="mt-3 fw-bold">Username</div>
                                <p class="card-text mb-0">{{ user.username }}</p>
                                <div class="mt-3 fw-bold">Email Adress</div>
                                <p class="card-text mb-0">{{ user.emailAddress }}</p>
                                <div class="mt-3 fw-bold">Role</div>
                                <p class="card-text mb-0">{{ user.role.name }}</p>
                            </div>
                            <a class="btn btn-warning my-3"
                               href="{{ path( 'users_modify', {'id' :user.id}) }}">Modify</a>
                            <a class="btn btn-danger" href="{{ path( 'users_delete', {'id' :user.id}) }}">Delete</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
