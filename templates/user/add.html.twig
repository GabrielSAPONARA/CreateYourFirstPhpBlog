{% extends "base.html.twig" %}

{% block title %}
    Add User
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>Add User</h1>
    <form action="process" method="post">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" placeholder="Jean" id="firstName" />

        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" placeholder="MARTIN" id="lastName" />

        <label for="emailAdress">Email Adress</label>
        <input type="email" name="emailAdress" placeholder="jean.martin@gmail.com" id="emailAdress" />

        <label for="username">Username</label>
        <input type="text" name="username" placeholder="MiloPaper" id="username" />

        <label for="password">Password</label>
        <input type="password" name="password" placeholder="*******************" id="password" />

        {% set roleIterator = 0 %}
        {% for role in roles %}
            <label for="role-{{ roleIterator }}">{{ role.name }}</label>
            <input type="radio" name="role" id="role-{{ roleIterator }}" value="{{ role.id }}">
            {% set roleIterator = roleIterator + 1 %}
        {% endfor %}

        <input type="submit" name="submit" value="Submit" />
    </form>
{% endblock %}

