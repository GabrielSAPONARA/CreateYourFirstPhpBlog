<textarea
        name="{{ fieldName }}"
        class="form-control"
{% for attribut, attributValue in fieldProperties %}

    {% if attributValue is iterable %}
       {% if attributValue|length > 0 %}
           {% for option, optionValue in attributValue %}
                {% if not(optionValue is same as (false)) %}
                    {% if (option is same as ("required")) %}
                        data-sb-validations="required"
                    {% else %}
                        {{ option }} = "{{ optionValue }}"
                    {% endif %}
                {% endif %}
            {% endfor %}
       {% endif %}
    {% else %}
        {% if not(attribut is same as ("value")) and not(attribut is same as ("type")) and not(attribut is same as ("label")) %}
           {{ attribut }}="{{ attributValue }}"
        {% endif %}
    {% endif %}
{% endfor %}

>{{ fieldProperties["value"]|e }}</textarea>