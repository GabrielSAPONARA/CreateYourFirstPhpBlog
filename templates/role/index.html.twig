{% extends "base.html.twig" %}

{% block title %}
    Roles
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block pageTitle %}
    Roles
{% endblock %}
{% block main %}
    <a href="{{ path("roles__addition") }}">Add Role</a>
    <div class="cards-set">
        {% for role in roles %}
            <div>
                {{ role.name }}
            </div>
            <div>
                <a href="{{ path('roles_modify', {'id': role.id}) }}">Modify</a>
            </div>
            <div>
                <a href="{{ path('roles_delete', {'id': role.id}) }}">Delete</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
