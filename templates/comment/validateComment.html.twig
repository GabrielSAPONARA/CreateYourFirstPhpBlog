{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/style/css/comment/validateComment.css') }}">
{% endblock %}

{% block title %}Validate this Comment{% endblock %}

{% block pageTitle %}
    Validate this Comment
{% endblock %}
{% block main %}
    <section class="py-5">
        <div class="container px-5">
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        <form class="form" action="{{ path("process__to__validate__comment", {'commentId' : commentId}) }}" method="post">
                            <div class="mb-3">
                                <label class="fw-bold" for="{{ formFields["Content"]["id"] }}">
                                    Content
                                </label>
{#                                {% include 'form/label.html.twig' with {'fieldProperties' : formFields["Content"], 'fieldName' : "Content"} only %}#}
                                {% include 'form/textarea.html.twig' with {'fieldProperties' : formFields["Content"], 'fieldName' : "Content"} only %}
                            </div>
                            <div class="d-flex">
                                {% include 'form/checkbox.html.twig' with {'fieldProperties' : formFields["IsValidated"], 'fieldName' : "IsValidated"} only %}
                                {% include 'form/label.html.twig' with {'fieldProperties' : formFields["IsValidated"], 'fieldName' : "IsValidated"} only %}
                            </div>
                            <div class="d-grid mt-5">
                                {% include 'form/label.html.twig' with {'fieldProperties' : formFields["submit"], 'fieldName' : "submit"} only %}
                                {% include 'form/input.html.twig' with {'fieldProperties' : formFields["submit"], 'fieldName' : "submit"} only %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}